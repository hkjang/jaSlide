// Prisma Schema for JaSlide

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Organization
// ============================================

model User {
  id                 String               @id @default(cuid())
  email              String               @unique
  name               String?
  image              String?
  password           String?
  creditsRemaining   Int                  @default(100)
  role               UserRole             @default(USER)
  status             UserStatus           @default(ACTIVE)
  preferences        Json                 @default("{}")
  // MFA & Security fields
  mfaEnabled         Boolean              @default(false)
  mfaSecret          String?
  failedLoginAttempts Int                 @default(0)
  lockedUntil        DateTime?
  organization       Organization?        @relation(fields: [organizationId], references: [id])
  organizationId     String?
  presentations      Presentation[]
  creditTransactions CreditTransaction[]
  generationJobs     GenerationJob[]
  assets             Asset[]
  auditLogs          AuditLog[]
  accounts           Account[]
  sessions           Session[]
  userRoles          UserRoleAssignment[]
  loginLogs          LoginLog[]
  // CRUD UIUX Extension
  inputPrompts       InputPrompt[]
  inputCombinations  InputCombination[]
  favorites          Favorite[]
  recentWorks        RecentWork[]
  comments           Comment[]
  collaborations     Collaborator[]
  exportPresets      ExportPreset[]
  // UX Enhancement Extension
  userPreference     UserPreference?
  uxState            UXState?
  autoRules          AutoRule[]
  lastLoginAt        DateTime?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt

  @@index([email])
  @@index([organizationId])
  @@index([status])
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
  PENDING
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum UserRole {
  USER
  ADMIN
  ORG_ADMIN
  SYSTEM_ADMIN
  OPERATOR
  AUDITOR
}

model Organization {
  id            String             @id @default(cuid())
  name          String
  slug          String             @unique
  domain        String?
  logo          String?
  brandSettings Json               @default("{}")
  plan          OrganizationPlan   @default(FREE)
  users         User[]
  templates     Template[]
  assets        Asset[]
  colorPalettes ColorPalette[]
  fontSets      FontSet[]
  createdAt     DateTime           @default(now())
  updatedAt     DateTime           @updatedAt

  @@index([slug])
  @@index([domain])
}

enum OrganizationPlan {
  FREE
  STARTER
  PROFESSIONAL
  ENTERPRISE
}

// ============================================
// Presentation & Slides
// ============================================

model Presentation {
  id            String             @id @default(cuid())
  title         String
  description   String?
  user          User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String
  template      Template?          @relation(fields: [templateId], references: [id])
  templateId    String?
  slides            Slide[]
  status            PresentationStatus @default(DRAFT)
  sourceType        SourceType
  sourceContent     String?            @db.Text
  metadata          Json?
  isPublic          Boolean            @default(false)
  shareToken        String?            @unique
  generationJob     GenerationJob?
  // CRUD UIUX Extension
  versions          Version[]
  undoRedoSnapshots UndoRedoSnapshot[]
  comments          Comment[]
  collaborators     Collaborator[]
  recentWorks       RecentWork[]
  shareLogs         ShareLog[]
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt

  @@index([userId])
  @@index([templateId])
  @@index([status])
  @@index([shareToken])
}

enum PresentationStatus {
  DRAFT
  GENERATING
  COMPLETED
  FAILED
}

enum SourceType {
  TEXT
  DOCX
  PDF
  MARKDOWN
  CSV
  URL
}

model Slide {
  id             String       @id @default(cuid())
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  order          Int
  type           SlideType
  title          String?
  content        Json
  layout         String       @default("center")
  notes          String?      @db.Text
  // CRUD UIUX Extension
  blocks         Block[]
  comments       Comment[]    @relation("SlideComments")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([presentationId])
  @@index([order])
}

enum SlideType {
  TITLE
  CONTENT
  TWO_COLUMN
  IMAGE
  CHART
  QUOTE
  BULLET_LIST
  COMPARISON
  TIMELINE
  SECTION_HEADER
  BLANK
}

// ============================================
// Templates
// ============================================

model Template {
  id             String           @id @default(cuid())
  name           String
  description    String?
  thumbnail      String?
  category       TemplateCategory @default(BUSINESS)
  config         Json
  isPublic       Boolean          @default(false)
  organization   Organization?    @relation(fields: [organizationId], references: [id])
  organizationId String?
  presentations  Presentation[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([category])
  @@index([isPublic])
  @@index([organizationId])
}

enum TemplateCategory {
  BUSINESS
  EDUCATION
  CREATIVE
  MINIMAL
  TECH
  MARKETING
  CUSTOM
}

// ============================================
// Assets
// ============================================

model Asset {
  id             String       @id @default(cuid())
  type           AssetType
  name           String
  url            String
  thumbnailUrl   String?
  size           Int
  mimeType       String
  licenseInfo    Json?
  user           User?        @relation(fields: [userId], references: [id])
  userId         String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([userId])
  @@index([organizationId])
  @@index([type])
}

enum AssetType {
  IMAGE
  ICON
  LOGO
  BACKGROUND
  FONT
}

// ============================================
// Generation & Credits
// ============================================

model GenerationJob {
  id             String           @id @default(cuid())
  user           User             @relation(fields: [userId], references: [id])
  userId         String
  presentation   Presentation?    @relation(fields: [presentationId], references: [id])
  presentationId String?          @unique
  status         GenerationStatus @default(QUEUED)
  input          Json
  output         Json?
  progress       Int              @default(0)
  error          Json?
  creditsCost    Int              @default(0)
  startedAt      DateTime?
  completedAt    DateTime?
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt

  @@index([userId])
  @@index([status])
}

enum GenerationStatus {
  QUEUED
  PROCESSING
  GENERATING_OUTLINE
  GENERATING_CONTENT
  APPLYING_DESIGN
  RENDERING
  COMPLETED
  FAILED
  CANCELLED
}

model CreditTransaction {
  id            String                @id @default(cuid())
  user          User                  @relation(fields: [userId], references: [id])
  userId        String
  amount        Int
  type          CreditTransactionType
  description   String
  referenceId   String?
  referenceType String?
  balance       Int
  createdAt     DateTime              @default(now())

  @@index([userId])
  @@index([type])
  @@index([createdAt])
}

enum CreditTransactionType {
  PURCHASE
  USAGE
  REFUND
  BONUS
  SUBSCRIPTION
  ADJUSTMENT
}

// ============================================
// Audit & Logging
// ============================================

model AuditLog {
  id        String   @id @default(cuid())
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  action    String
  resource  String
  resourceId String?
  details   Json?
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
}

// ============================================
// Role-Based Access Control
// ============================================

model Role {
  id          String               @id @default(cuid())
  name        String               @unique
  description String?
  permissions Json                 @default("[]")
  isSystem    Boolean              @default(false)
  users       UserRoleAssignment[]
  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model UserRoleAssignment {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  role      Role     @relation(fields: [roleId], references: [id])
  roleId    String
  createdAt DateTime @default(now())

  @@unique([userId, roleId])
  @@index([userId])
  @@index([roleId])
}

// ============================================
// Credit & Pricing Management
// ============================================

model CreditPolicy {
  id          String   @id @default(cuid())
  name        String
  modelType   String   // 'llm', 'image', 'generation'
  modelName   String?  // specific model name
  costPerUnit Int      // credits per operation
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([modelType])
  @@index([isActive])
}

model PricingPlan {
  id             String   @id @default(cuid())
  name           String   @unique
  displayName    String
  monthlyCredits Int
  price          Decimal  @db.Decimal(10, 2)
  features       Json     @default("[]")
  isActive       Boolean  @default(true)
  sortOrder      Int      @default(0)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@index([isActive])
}

// ============================================
// LLM Model Registry
// ============================================

model LlmModel {
  id            String   @id @default(cuid())
  name          String   @unique
  provider      String   // 'openai', 'anthropic', 'azure', 'google'
  modelId       String   // actual API model id
  endpoint      String?
  apiKeyEnvVar  String   // env variable name for API key
  maxTokens     Int      @default(4096)
  rateLimit     Int?     // requests per minute
  costPerToken  Decimal  @db.Decimal(10, 8)
  isActive      Boolean  @default(true)
  isDefault     Boolean  @default(false)
  config        Json     @default("{}")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([provider])
  @@index([isActive])
}

// ============================================
// Prompt Template Management
// ============================================

model PromptRegistry {
  id          String                  @id @default(cuid())
  name        String                  @unique
  category    String                  // 'outline', 'content', 'design', 'edit'
  description String?
  versions    PromptTemplateVersion[]
  createdAt   DateTime                @default(now())
  updatedAt   DateTime                @updatedAt

  @@index([category])
}

model PromptTemplateVersion {
  id         String         @id @default(cuid())
  template   PromptRegistry @relation(fields: [templateId], references: [id], onDelete: Cascade)
  templateId String
  version    Int
  content    String         @db.Text
  variables  Json           @default("[]")
  isActive   Boolean        @default(true)
  createdBy  String?
  createdAt  DateTime       @default(now())

  @@unique([templateId, version])
  @@index([templateId])
  @@index([isActive])
}

// ============================================
// Design & Branding
// ============================================

model ColorPalette {
  id             String        @id @default(cuid())
  name           String
  colors         Json          // array of hex colors
  isPublic       Boolean       @default(false)
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([isPublic])
  @@index([organizationId])
}

model LayoutRule {
  id          String   @id @default(cuid())
  name        String
  slideType   String
  config      Json     // layout configuration
  isDefault   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([slideType])
  @@index([isDefault])
}

// ============================================
// System Policies & Configuration
// ============================================

model SystemPolicy {
  id          String   @id @default(cuid())
  category    String   // 'security', 'retention', 'limits', 'notification'
  key         String   @unique
  value       Json
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model AlertConfig {
  id          String   @id @default(cuid())
  name        String
  eventType   String   // 'error', 'billing', 'security', 'system'
  channel     String   // 'email', 'webhook', 'sms', 'slack'
  config      Json     // channel-specific settings
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([eventType])
  @@index([isActive])
}

// ============================================
// API Logging
// ============================================

model ApiLog {
  id           String   @id @default(cuid())
  userId       String?
  method       String
  path         String
  statusCode   Int
  responseTime Int      // milliseconds
  requestBody  Json?
  responseBody Json?
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([path])
  @@index([statusCode])
  @@index([createdAt])
}

// ============================================
// Login Audit Log
// ============================================

model LoginLog {
  id        String    @id @default(cuid())
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
  email     String
  success   Boolean
  ipAddress String?
  userAgent String?
  device    String?
  errorMsg  String?
  createdAt DateTime  @default(now())

  @@index([userId])
  @@index([email])
  @@index([success])
  @@index([createdAt])
}

// ============================================
// CRUD UIUX Extension - Versioning & Undo/Redo
// ============================================

model Version {
  id             String       @id @default(cuid())
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  versionNumber  Int
  name           String?
  snapshot       Json         // 전체 프레젠테이션 상태
  createdBy      String
  createdAt      DateTime     @default(now())

  @@unique([presentationId, versionNumber])
  @@index([presentationId])
}

model UndoRedoSnapshot {
  id             String       @id @default(cuid())
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  slideId        String?
  action         String       // 'slide_add', 'slide_update', 'block_edit' 등
  beforeState    Json
  afterState     Json
  createdAt      DateTime     @default(now())

  @@index([presentationId])
}

// ============================================
// CRUD UIUX Extension - Block-level Content
// ============================================

model Block {
  id        String    @id @default(cuid())
  slide     Slide     @relation(fields: [slideId], references: [id], onDelete: Cascade)
  slideId   String
  type      BlockType
  order     Int
  content   Json      // type별 콘텐츠 구조
  style     Json      @default("{}")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([slideId])
  @@index([type])
}

enum BlockType {
  TEXT
  IMAGE
  CHART
  TABLE
  ICON
  SHAPE
}

// ============================================
// CRUD UIUX Extension - Input Context & History
// ============================================

model InputPrompt {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  content   String   @db.Text
  metadata  Json?
  createdAt DateTime @default(now())

  @@index([userId])
}

model InputCombination {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  promptText  String?  @db.Text
  documentUrl String?
  sourceUrl   String?
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([userId])
}

// ============================================
// CRUD UIUX Extension - User Preferences
// ============================================

model Favorite {
  id           String   @id @default(cuid())
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId       String
  resourceType String   // 'template', 'palette', 'font'
  resourceId   String
  order        Int      @default(0)
  createdAt    DateTime @default(now())

  @@unique([userId, resourceType, resourceId])
  @@index([userId])
}

model RecentWork {
  id             String       @id @default(cuid())
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  isPinned       Boolean      @default(false)
  accessedAt     DateTime     @default(now())

  @@unique([userId, presentationId])
  @@index([userId])
}

// ============================================
// CRUD UIUX Extension - Collaboration
// ============================================

model Comment {
  id             String       @id @default(cuid())
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  slide          Slide?       @relation("SlideComments", fields: [slideId], references: [id])
  slideId        String?
  user           User         @relation(fields: [userId], references: [id])
  userId         String
  content        String       @db.Text
  parentId       String?      // 대댓글
  isResolved     Boolean      @default(false)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([presentationId])
  @@index([slideId])
}

model Collaborator {
  id             String           @id @default(cuid())
  presentation   Presentation     @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  user           User             @relation(fields: [userId], references: [id])
  userId         String
  role           CollaboratorRole @default(VIEWER)
  invitedBy      String
  joinedAt       DateTime         @default(now())

  @@unique([presentationId, userId])
  @@index([presentationId])
}

enum CollaboratorRole {
  OWNER
  EDITOR
  COMMENTER
  VIEWER
}

// ============================================
// CRUD UIUX Extension - Export & Publishing
// ============================================

model ExportPreset {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  name      String
  format    String   // 'pptx', 'pdf', 'images'
  config    Json     // 포맷별 옵션
  isDefault Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model ShareLog {
  id             String       @id @default(cuid())
  presentation   Presentation @relation(fields: [presentationId], references: [id], onDelete: Cascade)
  presentationId String
  sharedBy       String
  sharedTo       String?      // email or null for public
  method         String       // 'link', 'email', 'embed'
  note           String?
  createdAt      DateTime     @default(now())

  @@index([presentationId])
}

// ============================================
// CRUD UIUX Extension - Design & Typography
// ============================================

model FontSet {
  id             String        @id @default(cuid())
  name           String
  titleFont      String
  bodyFont       String
  headingFont    String?
  isPublic       Boolean       @default(false)
  organization   Organization? @relation(fields: [organizationId], references: [id])
  organizationId String?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  @@index([isPublic])
  @@index([organizationId])
}

// ============================================
// UX Enhancement - User Preferences & State
// ============================================

model UserPreference {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String   @unique
  theme       String   @default("light")
  font        String   @default("default")
  exportType  String   @default("pptx")
  customData  Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UXState {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String   @unique
  lastStep    String?
  focusMode   Boolean  @default(false)
  sessionData Json     @default("{}")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AutoRule {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  name       String
  trigger    String
  action     String
  config     Json     @default("{}")
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
}

model QualityScore {
  id             String   @id @default(cuid())
  presentationId String
  slideId        String?
  readability    Float
  clarity        Float
  overall        Float
  metadata       Json?
  createdAt      DateTime @default(now())

  @@index([presentationId])
  @@index([slideId])
}

model RecoveryLog {
  id         String   @id @default(cuid())
  userId     String
  sessionId  String?
  errorType  String
  errorData  Json?
  retryCount Int      @default(0)
  resolved   Boolean  @default(false)
  recoveryAction String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
  @@index([errorType])
  @@index([resolved])
}

